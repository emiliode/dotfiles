#!/bin/sh 

export WM="leftWm"

case "$(printf "ğŸ”’lock\nğŸšªexit $WM\nâ™» reload $WM\nğŸ”ƒ reboot\nğŸ–¥ shutdown\nğŸ’¤ sleep\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
    'ğŸ”’lock')  slock ;;
    'ğŸ’¤ sleep')  slock && systemctl suspend -i ;;
    'â™» reload leftWm') leftwm-command "SoftReload" ;;
    'ğŸšªexit leftWm') notify-send "exiting" && loginctl kill-session $XDG_SESSION_ID ;; 
    'ğŸ”ƒ reboot') systemctl reboot -i ;;
    'ğŸ–¥ shutdown') systemctl poweroff -i ;;
    'ğŸ“º display off') xset dpms force off ;;
    *) exit 1 ;;
esac
